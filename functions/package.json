    "firebase-functions": "^5.0.0",
    "google-auth-library": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.29.0",
    "typescript": "^5.0.0"
  },
  "private": true
