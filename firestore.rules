rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is in members array
    function isMember(members) {
      return isAuthenticated() && 
             members != null && 
             members.hasAny([request.auth.uid]);
    }
    
    // Users collection
    // - User can only create their own document (document ID must match their uid)
    // - User can only read and update their own document
    // - No user can delete their document or read other users' documents
    match /users/{userId} {
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // No one can delete user documents
    }
    
    // Chats collection
    // - User can only read, write, and create chat documents where userId matches their uid
    match /chats/{chatId} {
      // For existing documents, check if userId matches authenticated user
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // For updates, check if userId matches authenticated user
      allow update: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
      
      // For creates, ensure userId matches authenticated user
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Allow delete only if userId matches authenticated user
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
    }
    
    // Ingredients collection
    // - Publicly readable by any user (authenticated or not)
    // - Writing/updating is locked down (read-only for now)
    match /ingredients/{ingredientId} {
      allow read: if true; // Public read access
      allow write: if false; // No write access (locked down)
      allow create: if false; // No create access
      allow delete: if false; // No delete access
    }
    
    // FeedOptimizations collection
    // - Similar to users: only the authenticated user who owns the document can read or write it
    match /feedOptimizations/{feedId} {
      // Check if the document has a userId field that matches the authenticated user
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      allow update: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
      
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      allow delete: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

